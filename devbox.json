{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.7/.schema/devbox.schema.json",
  "packages": [
    "cargo@latest",
    "nodejs@latest",
    "pnpm@latest",
    "docker@latest",
    "docker-compose@latest",
    "atlas@latest",
    "postgresql@latest",
    "python@3.12.8",
    "postgrest",
    "atlas"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ],
      "echo_once": "echo \"World\"",
      "server": [
        "docker build -t server /finance/server/ ",
        "docker run server "
      ],
      "client": [
        "docker build -t client /finance/client/ ",
        "docker run client"
      ],
      "financeDB_UP": "docker-compose -f /home/ryanhz/Projects/ERM/finance/docker-compose.yaml up -d",
      "financeDB_DOWN": "docker-compose -f /home/ryanhz/Projects/ERM/finance/docker-compose.yaml down",
      "financeDB_inspect": "atlas schema inspect -u \"postgres://finance_user:S3cret@localhost:5432/finance_DB?sslmode=disable\" --format '{{ sql . }}' > schema.sql ",
      "financeDB_apply": "atlas schema apply  -u \"postgres://finance_user:S3cret@localhost:5432/finance_DB?sslmode=disable\"  --to file://finance/schema.sql --dev-url \"sqlite://dev.db\""
    }
  },
  "env": {
    "ATLAS_DATABASE_URL": "postgres://finance_user:S3cret@localhost:5432/finance_DB?sslmode=disable"
  }
}